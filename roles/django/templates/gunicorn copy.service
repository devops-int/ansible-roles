[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/{{project_name}}
ExecStart=/home/{{project_name}}/bin/gunicorn --access-logfile - --workers 3 --bind
unix:/home/{{project_name}}/{{project_name}}.sock {{project_name}}.wsgi:application

[Install]
WantedBy=multi-user.target